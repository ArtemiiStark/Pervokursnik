<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_x="0dp"
        android:layout_y="350dp"
        android:gravity="center"
        android:text="В расписаниях с чередующимися по неделям занятиями на этой неделе:"
        android:textColor="#ac73ff"
        android:textSize="17sp" />



    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfView"
        android:layout_width="match_parent"
        android:layout_height="805dp"
        android:layout_x="0dp"
        android:layout_y="82dp"
        android:visibility="invisible">

    </com.github.barteksc.pdfviewer.PDFView>

    <Button
        android:id="@+id/buttonFind"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_x="145dp"
        android:layout_y="13dp"
        android:background="@drawable/button_find"
        android:text="Расписание занятий"
        android:textColor="#FFF"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_x="21dp"
        android:layout_y="13dp"
        android:background="@drawable/button_find"
        android:text="Назад"
        android:textColor="#FFF"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/status"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_x="122dp"
        android:layout_y="429dp"
        android:background="@drawable/day1"
        android:text="Числитель"
        android:textSize="14sp" />

</AbsoluteLayout>